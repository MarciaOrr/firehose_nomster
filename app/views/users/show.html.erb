<div class='booyah-box profile'>
  <div class='profile-picture col-md-4'>
    <img src='/assets/profilePicture.jpg' class='profile-image img-responsive'>
    <h1><%= @user.email %></h1>
  </div>
  <div class='profile-metrics col-md-4'>    
    <h3>Member Since: <%= @user.created_at.strftime("%B  %Y") %></h3>
    <hr />
    <h4> <%=@user.comments.count %> Total Comments</h4> <br />
    <h4> <%=@user.comments.where(rating: '5_star').count %> Five-Star Reviews</h4>
  </div>
  <div class='clear'></div>
</div>

<div class='profile-comments col-xs-12'>
  <div class='comments-heading'>
    <h1>My Comments</h1>
  </div>

  <% @user.comments.each_with_index do |comment, comment_index| %>
    <% if comment_index % 2 == 0 %>
      <div class='clear'></div>
    <% end %>
    <div class='comment-place col-xs-12 col-sm-6'>
      <h2><%= link_to comment.place.name, place_path(comment.place) %></h2>
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b>
        <% end %>
        <%= comment.message %>
      </blockquote>
    </div>
  <% end %>

</div>

