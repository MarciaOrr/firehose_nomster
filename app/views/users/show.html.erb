<div class='booyah-box profile'>
  <div class='profile-picture col-md-4'>
    <img src='/assets/profilePicture.jpg' class='profile-image img-responsive'>
    <h1><%= @user.email %></h1>
  </div>
  <div class='profile-metrics col-md-4'>    
    <h3>Member Since: <%= @user.created_at.strftime("%B  %Y") %></h3>
    <hr />
    <h4> <%=@user.comments.count %> Total Comments</h4> <br />
    <h4> <%=@user.comments.where(rating: '5_star').count %> Five-Star Reviews</h4>
  </div>
  <div class='clear'></div>
</div>

<div class='profile-comments col-xs-12'>
<div class='comments-heading'>
  <h1 class='text-center'>My Comments</h1>
  </div>

  <%
    left_array = []
    right_array = []
    half_comments = @user.comments.count / 2
    if @user.comments.count % 2 != 0
       half_comments += 1
    end

    current_comment = 0
    @user.comments.each do |comment|
      current_comment += 1
      if current_comment <= half_comments
        left_array.push(comment)
      else
        right_array.push(comment)
      end
    end
  %>

  <div class='comments-left col-sm-6'>
    <% left_array.each do |comment| %>
        <blockquote>
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> -
          <% end %>
          <%= comment.message %>
        </blockquote>
    <% end %>
  </div>
  <div class='comments-right col-sm-6'>
    <% right_array.each do |comment| %>
        <blockquote>
          <% if comment.humanized_rating.present? %>
             <b><%= comment.humanized_rating %></b> -
           <% end %>
           <%= comment.message %>
         </blockquote>
    <% end %>
  </div>

</div>

